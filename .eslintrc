{
  "parser": "typescript-eslint-parser",
  "extends": ["plugin:jsx-a11y/recommended"],
  "plugins": ["jsx-a11y"],
  "rules": {
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "labelComponents": ["HtmlLabel"],
        "labelAttributes": [],
        "controlComponents": ["HtmlInput"],
        "assert": "either"
      }
    ]
  }
}
